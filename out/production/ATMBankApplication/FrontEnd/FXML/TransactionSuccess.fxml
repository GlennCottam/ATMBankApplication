<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="FrontEnd.TransactionSuccess"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets><URL value="@light-green.css"></URL></stylesheets>
    <top>
        <BorderPane styleClass="header-section">
            <center>
                <Label styleClass="header-text">Transaction Successful</Label>
            </center>
        </BorderPane>
    </top>
    <center>
        <Label>Transaction Was Successful</Label>
    </center>
    <bottom>
        <!--Footer-->
        <BorderPane styleClass="footer-section">
            <left>
                <GridPane styleClass="body-section"
                          alignment="center" hgap="10" vgap="10">
                    <Button text="Back To Selection"
                            onAction="#BackButtonHandle"
                            styleClass="bg-warn"
                            prefWidth="125"
                            prefHeight="25"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="0"
                            GridPane.columnSpan="1">
                    </Button>
                    <Button text="Logout"
                            onAction="#ExitButtonHandle"
                            styleClass="bg-error"
                            prefWidth="100"
                            prefHeight="25"
                            GridPane.columnIndex="0"
                            GridPane.rowIndex="0"
                            GridPane.columnSpan="1">
                    </Button>
                </GridPane>
            </left>
        </BorderPane>
    </bottom>
</BorderPane>
