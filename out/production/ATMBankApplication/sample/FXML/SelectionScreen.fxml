<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>


<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.SelectionScreen"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@main.css"></URL>
    </stylesheets>
    <!--Header-->
    <top>
        <BorderPane styleClass="header-section">
            <center>
                <Label styleClass="header-text" text="Please Select an Option"></Label>
            </center>
        </BorderPane>
    </top>
    <!--Body-->
    <center>
        <GridPane styleClass="body-section"
                  alignment="center" hgap="10" vgap="10">
            <gridLinesVisible>false</gridLinesVisible>
            <Button text="Withdraw"
                    fx:id="Withdraw_Button"
                    onAction="#WithdrawButtonHandle"
                    prefWidth="200"
                    prefHeight="50"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="0"
                    GridPane.columnSpan="1">
            </Button>
            <Button text="Deposit"
                    fx:id="Deposit_Button"
                    onAction="#DepositButtonHandle"
                    prefWidth="200"
                    prefHeight="50"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="1"
                    GridPane.columnSpan="1">
            </Button>
            <Button text="Check Balance"
                    fx:id="Check_Balance"
                    onAction="#CheckBalanceHandle"
                    prefWidth="200"
                    prefHeight="50"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="2"
                    GridPane.columnSpan="1">
            </Button>
        </GridPane>
    </center>
    <bottom>
        <!--Footer-->
        <BorderPane styleClass="footer-section">
            <left>
                <Button text="Logout"
                        fx:id="Exit_Button"
                        onAction="#ExitButtonHandle"
                        styleClass="bg-error"
                        prefWidth="100"
                        prefHeight="25">
                </Button>
            </left>
        </BorderPane>
    </bottom>
</BorderPane>
